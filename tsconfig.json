{
  "compilerOptions": {
    "incremental": true,
    "target": "es2021",
    "module": "commonjs",
    "lib": ["dom", "es2021"],
    "jsx": "react-jsx",
    "strict": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": ".erb/dll",
    "types": [ "node" ],
    "typeRoots": [ "./types", "../node_modules/@types" ],
    // "paths": {
    //   "*": ["node_modules/*"],
    //   "@assets/*": ["./assets/*"],
    //   "@common/*": ["./src/common/*"],
    //   "@main/*": ["./src/main/*"],
    //   "@renderer/*": ["./src/renderer/*"],
    //   "@src/*": ["./src/*"],
    //   "@misc/*": ["./misc/*"],
    // }
  },
  "exclude": ["test", "release/build", "release/app/dist", ".erb/dll"]
}
